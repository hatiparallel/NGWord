<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_main"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_detail"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/name_text"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:maxLength="10"
        android:textSize="28sp"
        android:textColor="@color/gray"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/caution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/invisible"
        android:text="@string/name_warning"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="@string/word_main"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:text="@string/word_detail"/>
    <ListView
        android:id="@+id/member_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/ok"
        style="@style/RegularButton"
        android:layout_marginTop="12dp"
        android:text="@string/ok_button" />

    <LinearLayout
        android:id="@+id/input_decider"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/input_edit_text"
            android:hint="@string/constraint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:inputType="text"
            android:maxLength="10"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/input_decide_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/rounded_button_black"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="@string/ok_button" />

    </LinearLayout>

</LinearLayout>